<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MeloncherAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MeloncherAvalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Width="800"
        Height="480"
        MinWidth="800"
        MinHeight="480"
        >

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="32" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border Grid.Column="1" Grid.Row="1">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition Height="64" />
          <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Border Background="White">
          <!--<TextBox Text="{Binding TestConsole}" VerticalScrollBarVisibility="Auto"/>-->
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--<ListView SelectedIndex="{Binding selectedAccount}" ItemsSource="{Binding Accounts}" ItemContainerStyle="{StaticResource Account}"></ListView>-->
            <ListBox SelectedIndex="{Binding selectedAccount}" Items="{Binding Accounts}">
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Username}"/>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
              <Button Command="{Binding AddOfflineCommand}" Content="Добавить Пиратку" Height="32" Width="128" />
              <Button Command="{Binding AddMojangCommand}" Content="Добавить Mojang" Height="32" Width="128" />
              <Button Command="{Binding AddMicrosoftCommand}" Content="Добавить Microsoft" Height="32" Width="128" />
              <Button Command="{Binding DeleteAccountCommand}" Content="Удалить выбранное" Height="32" Width="128" />
            </StackPanel>
          </Grid>
        </Border>
        <Grid Grid.Row="1" Background="#252525">
          <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
          </Grid.ColumnDefinitions>
          <StackPanel Orientation="Horizontal">
            <!--<TextBox Text="{Binding McVersionName}" Height="16" Width="128" />-->
            <!--<ComboBox Width="128" ItemsSource="{Binding Versions}" DisplayMemberPath="Name" SelectedValue="{Binding SelectedVersion}"></ComboBox>-->
            <!--<ComboBox SelectedItem="" />-->
            <ComboBox Width="128" Items="{Binding Versions}" SelectedItem="{Binding SelectedVersion}">
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>

            <!--<TextBlock Text="{Binding SelectedVersion}" Foreground="White"></TextBlock>-->
            <!--<TextBox Grid.Row="1" Text="{Binding Username}" Height="16" Width="128" />-->
            <StackPanel>
              <CheckBox IsChecked="{Binding Optifine}" Content="Optifine" Foreground="White" Height="16" Width="128" />
              <CheckBox IsChecked="{Binding Offline}" Content="Offline" Foreground="White" Height="16" Width="128" />
            </StackPanel>
          </StackPanel>
          <!--<Button Style="{StaticResource PlayButton}" Command="{Binding PlayButtonCommand}" IsEnabled="{Binding IsNotStarted}" Grid.Column="1" Content="Играть" Height="54" Width="248" />-->
          <Button Command="{Binding PlayButtonCommand}" IsEnabled="{Binding IsNotStarted}" Grid.Column="1" Content="Играть" Foreground="White" Height="54" Width="248" />
          <!--<Button Grid.Column="2" Height="32" Width="128" Content="Аккаунты" Command="{Binding OpenAccountsWindowCommand}"/>-->
        </Grid>
        <!--<uc:LoadingBar Grid.Row="2" Text="{Binding ProgressText}" Value="{Binding ProgressValue}" Hidden="{Binding ProgressHidden}" />-->
      </Grid>
    </Border>
  </Grid>
</Window>
