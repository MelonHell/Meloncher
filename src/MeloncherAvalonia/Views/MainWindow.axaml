<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MeloncherAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="800" 
        d:DesignHeight="480"
        x:Class="MeloncherAvalonia.Views.MainWindow"
        Icon="/icon.ico"
        Title="{Binding Title}"
        Width="800"
        Height="480"
        MinWidth="800"
        MinHeight="480"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="26"
        TransparencyLevelHint="Blur"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        >

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="26" />
      <RowDefinition />
    </Grid.RowDefinitions>
    <Border IsHitTestVisible="False" Background="#000000" Opacity=".75">
      <TextBlock Text="{Binding Title}" TextAlignment="Center" VerticalAlignment="Center" />
    </Border>
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="40" />
        <ColumnDefinition />
      </Grid.ColumnDefinitions>
      <Border Background="#202020" Opacity=".75" ></Border>
      <Border Grid.Column="1" Grid.Row="1">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="64" />
            <RowDefinition Height="auto" />
          </Grid.RowDefinitions>
          <Border Background="White">
            
          </Border>
          <Grid Grid.Row="1" Background="#252525">
            <Grid.ColumnDefinitions>
              <ColumnDefinition></ColumnDefinition>
              <ColumnDefinition></ColumnDefinition>
              <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
              <!--<TextBox Text="{Binding McVersionName}" Height="16" Width="128" />-->
              <!--<ComboBox Width="128" ItemsSource="{Binding Versions}" DisplayMemberPath="Name" SelectedValue="{Binding SelectedVersion}"></ComboBox>-->
              <!--<ComboBox SelectedItem="" />-->
              <ComboBox Width="128" Items="{Binding Versions}" SelectedItem="{Binding SelectedVersion}">
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>

              <!--<TextBlock Text="{Binding SelectedVersion}" Foreground="White"></TextBlock>-->
              <!--<TextBox Grid.Row="1" Text="{Binding Username}" Height="16" Width="128" />-->
              <StackPanel>
                <CheckBox IsChecked="{Binding Optifine}" Content="Optifine" Foreground="White" Height="16" Width="128" />
                <CheckBox IsChecked="{Binding Offline}" Content="Offline" Foreground="White" Height="16" Width="128" />
              </StackPanel>
            </StackPanel>
            <!--<Button Style="{StaticResource PlayButton}" Command="{Binding PlayButtonCommand}" IsEnabled="{Binding IsNotStarted}" Grid.Column="1" Content="Играть" Height="54" Width="248" />-->
            <Button Command="{Binding PlayButtonCommand}" IsEnabled="{Binding IsNotStarted}" Grid.Column="1" Content="Играть" Foreground="White" Height="54" Width="248" />
            <StackPanel Grid.Column="2">
              <Button Height="32" Width="128" Content="Аккаунты" Command="{Binding OpenAccountsWindowCommand}"/>
              <TextBlock Text="{Binding SelectedSession.Username}" />
            </StackPanel>
          </Grid>
          <!--<uc:LoadingBar Grid.Row="2" Text="{Binding ProgressText}" Value="{Binding ProgressValue}" Hidden="{Binding ProgressHidden}" />-->
          <ProgressBar Grid.Row="2" Height="20" Value="{Binding ProgressValue}" Foreground="#aa0000" Background="Black" IsVisible="{Binding !ProgressHidden}" />
          <TextBlock Grid.Row="2" Text="{Binding ProgressText}" TextAlignment="Center" IsVisible="{Binding !ProgressHidden}" />
        </Grid>
      </Border>
    </Grid>
  </Grid>
</Window>
