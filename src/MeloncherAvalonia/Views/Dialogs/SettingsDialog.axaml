<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MeloncherAvalonia.Views.Dialogs.SettingsDialog"
             Width="320"
             Height="450">
	<Grid ColumnDefinitions="*,128" RowDefinitions="48, 48, 48, 48, 48, *, Auto, Auto">
		<!-- Названия -->
		<TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Text="Использовать Оптифайн" />
		<TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Text="Режим окна" />
		<TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Text="Максимум Озу" />
		<TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Text="Использовать Прозрачность" />
		<TextBlock Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Text="Аргументы JVM" />
		<!-- Настройки -->
		<ToggleSwitch Grid.Column="1" Grid.Row="0" IsChecked="{Binding LauncherSettings.UseOptifine}" />
		<ComboBox Grid.Column="1" Grid.Row="1" SelectedIndex="{Binding LauncherSettings.WindowMode}">
			<ComboBox.Items>
				<ComboBoxItem Content="Оконный" />
				<ComboBoxItem Content="Полноэкранный" />
				<ComboBoxItem Content="Безрамочный" />
			</ComboBox.Items>
		</ComboBox>
		<NumericUpDown Grid.Column="1" Grid.Row="2" Value="{Binding LauncherSettings.MaximumRamMb}" />
		<ToggleSwitch Grid.Column="1" Grid.Row="3" IsChecked="{Binding LauncherSettings.GlassBackground}" />
		<TextBox Grid.Column="1" Grid.Row="4" Text="{Binding LauncherSettings.JvmArguments}" />
		<!-- Кнопки -->
		<Button HorizontalAlignment="Stretch" Grid.Row="6" Grid.ColumnSpan="2" Grid.Column="0" Content="Импорт настроек из .minecraft" Command="{Binding ImportCommand}" />
		<Button HorizontalAlignment="Stretch" Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="0" Content="OK" Command="{Binding OkCommand}" />
	</Grid>
</UserControl>