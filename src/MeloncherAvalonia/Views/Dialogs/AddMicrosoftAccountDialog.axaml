<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:MeloncherAvalonia.Properties"
             mc:Ignorable="d"
             x:Class="MeloncherAvalonia.Views.Dialogs.AddMicrosoftAccountDialog"
             Height="128"
             Width="256">
	<Grid RowDefinitions="*,Auto">
		<StackPanel>
			<TextBlock TextWrapping="Wrap" Height="40" Text="{x:Static p:Resources.AddMicrosoftDialogText}" FontSize="13" />
			<TextBox Text="{Binding RedirectUrl}" Margin="4" Height="32" TextWrapping="Wrap" VerticalAlignment="Top" />
		</StackPanel>
		<Button Grid.Row="1" HorizontalAlignment="Stretch" Command="{Binding OkCommand}" Content="{x:Static p:Resources.Add}" Margin="4" VerticalAlignment="Top" />
	</Grid>
</UserControl>